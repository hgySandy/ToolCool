<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView android:id="@+id/ripple_week_item_list_context"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ripple:rv_rippleDuration="250"
    ripple:rv_type="rectangle"
    ripple:rv_color="#888888">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:padding="10dp"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_item_weekly_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:gravity="left"
        android:text="name" />

    <TextView
        android:id="@+id/tv_item_weekly_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="18dp"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:gravity="right"
        android:text="time" />

</LinearLayout>
</com.andexert.library.RippleView>