<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ljy.fragment.ArticleContextFragment">

    <LinearLayout
        android:id="@+id/linearlayout_tuijian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/rec_guide" />

        <Button
            android:id="@+id/btn_tuijian_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@color/color_btn_tuijian_login"
            android:padding="10dp"
            android:text="@string/str_tuijian_login" />
    </LinearLayout>

    <ListView
        android:id="@+id/listview_article_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="3dp" />

</FrameLayout>
